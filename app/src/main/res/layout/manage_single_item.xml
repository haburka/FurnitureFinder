<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#FF8639">

<android.support.v7.widget.Toolbar
    android:id="@+id/toolbar"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:minHeight="?attr/actionBarSize"
    android:layout_marginBottom="10dp" />

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginTop="55dp"
    android:background="#FFFFFF">
</RelativeLayout>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/title"
    android:id="@+id/title"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="10dp"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:textStyle="bold"
    android:textSize="40sp"
    android:textColor="#000000" />

<ImageView
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:id="@+id/image"
    android:layout_marginLeft="10dp"
    android:layout_below="@+id/title"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="#000000"
    android:padding="2dp"
    android:src="@drawable/no_photo" />



<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/description"
    android:id="@+id/text"
    android:textSize="20sp"
    android:layout_marginLeft="10dp"
    android:layout_alignTop="@+id/image"
    android:layout_alignBottom="@+id/image"
    android:layout_alignParentEnd="true"
    android:layout_toRightOf="@+id/image"/>


<RelativeLayout
    android:id="@+id/button_group"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:layout_marginTop="40dp"
    android:layout_below="@+id/image">

    <Button
        android:id="@+id/button_photo"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:text="@string/bt_photo"
        android:background="@drawable/buttonshape"
        />

    <Button
        android:id="@+id/button_text"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:text="@string/bt_text"
        android:background="@drawable/buttonshape"/>

    <Button
        android:id="@+id/button_title"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:text="@string/bt_title"
        android:background="@drawable/buttonshape"/>
</RelativeLayout>


<Button
    android:layout_width="225dp"
    android:layout_height="60dp"
    android:textColor="#FFFFFF"
    android:textSize="24sp"
    android:layout_centerInParent="true"
    android:text="@string/bt_back"
    android:id="@+id/button_back"
    android:layout_below="@id/button_group"
    android:layout_marginTop="60dp"
    android:background="@drawable/savebuttonshape"/>



</RelativeLayout>