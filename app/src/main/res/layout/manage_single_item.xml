<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:id="@+id/title"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="40sp"
        android:textColor="#000000" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/image"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/no_photo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:id="@+id/text"
        android:textSize="20sp"
        android:layout_alignTop="@+id/image"
        android:layout_alignBottom="@+id/image"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/image"/>

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/bt_photo"
        android:id="@+id/button_photo"
        android:onClick="changeImage"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/image"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/bt_text"
        android:id="@+id/button_text"
        android:layout_marginRight="50dp"
        android:layout_alignTop="@+id/button_photo"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/bt_title"
        android:id="@+id/button_title"
        android:layout_marginLeft="50dp"
        android:layout_alignTop="@+id/button_back"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="@string/bt_back"
        android:id="@+id/button_back"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/button_text"
        android:layout_alignStart="@+id/button_text" />

</RelativeLayout>